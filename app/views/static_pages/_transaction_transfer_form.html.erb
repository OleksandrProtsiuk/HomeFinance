
<!-- Modal -->
<div class="modal fade" id="transferModal" tabindex="-1" role="dialog" aria-labelledby="transferModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">New transfer transaction</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">


        <div id="transfer-transaction">

          <form @submit.prevent="submitTransferForm">
            <!-- errors here -->
            <div v-if="errors.length" class="alert alert-danger">
              <b>Please correct the following error(s):</b>
              <ul>
                <li v-for="error in errors">{{ error }}</li>
              </ul>
            </div>
            <!-- notices here -->
            <div v-if="notice.length">
              <pre v-for="notice in notice" class="alert alert-success"> {{ notice }} </pre>
            </div>
            <!-- fields go -->
            <div>
              <label for="account_id">From Account</label><br>
              <select v-model="account_id" class="form-control">
                <% account_names_and_ids.each do |element|  %>
                  <option value="<%= element[1] %>"><%= element[0] %></option>
                <% end %>
              </select>
            </div>
            <div>
              <label for="destination_account_id">To Account</label><br>
              <select v-model="destination_account_id" class="form-control">
                <% account_names_and_ids.each do |element|  %>
                  <option value="<%= element[1] %>"><%= element[0] %></option>
                <% end %>
              </select>
            </div>
            <div>
              <input id="destination_account_amount" type="text" v-model="destination_account_amount" hidden />
              <input id="category_id" type="text" v-model="category_id" hidden />
            </div>
            <div>
              <label for="amount">Input Amount</label><br>
              <input id="amount" type="text" v-model="amount" class="form-control"/>
            </div>
            <div>
              <label for="comment">comment</label><br>
              <input id="comment" type="text" v-model="comment" class="form-control"/>
            </div>
            <br>
            <button :class="[account_id ? activeClass : '']" type="submit" class="btn btn-warning">Add Transaction</button>
          </form>
        </div>

      </div>
    </div>
  </div>
</div>
