<p id="notice"><%= notice %></p>

<h1>Transactions</h1>

<table class="table">
  <thead>
    <tr>
      <th>Account_id</th>
      <th>Destination_account_id</th>
      <th>Amount</th>
      <th>Destination_account_amount</th>
      <th>Comment</th>
      <th>Category_id</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transactions.each do |transaction| %>
      <tr>
        <td><%= transaction.account_id %></td>
        <td><%= transaction.destination_account_id %></td>
        <td><%= transaction.amount %></td>
        <td><%= transaction.destination_account_amount %></td>
        <td><%= transaction.comment %></td>
        <td><%= transaction.category_id %></td>
        <td><%= link_to 'Show', transaction %></td>
        <td><%= link_to 'Edit', edit_transaction_path(transaction) %></td>
        <td><%= link_to 'Destroy', transaction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

