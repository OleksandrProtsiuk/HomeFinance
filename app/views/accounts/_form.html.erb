<%= form_with(model: account, local: true) do |form| %>
  <% if account.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(account.errors.count, "error") %> prohibited this account from being saved:</h2>

      <ul>
      <% account.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, { :class => 'form-control' }%>
  </div>

  <div class="field">
    <%= form.label :value %>
    <span><%= account.value %></span>
    <input type="text" class="form-control" v-model="acc_value">
    <input type="hidden" name="account[value]" id="account_value" v-bind:value="positive">
  </div>

  <div class="field">
    <%= form.label :status %>
    <%= form.select :status, account_status_hash, {}, { 'class':'form-control', 'v-model': 'acc_status' }%>
  </div>

  <div class="field" style="display: none;"> <!-- remove style when categories will be added -->
    <%= form.label :category_id %>
    <%= form.number_field :category_id, { :class => 'form-control', :value => 0 }%>
  </div>

  <div class="actions">
    <%= form.submit({ :class => 'btn btn-warning'}) %>
  </div>
<% end %>
